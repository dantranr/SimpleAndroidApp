<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/background_light">

    <EditText
            android:layout_width="222dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/total_bill"
            android:autofillHints="" android:hint="Enter total bill..."
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tip_view_percentage"/>

    <Button
            android:text="CALCULATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:id="@+id/cal_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.596"/>

    <SeekBar
            android:layout_width="223dp"
            android:layout_height="56dp"
            android:id="@+id/tip_percent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintVertical_bias="0.311"/>


    <TextView
            android:text="@string/tip_percentage"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:id="@+id/tip_view_percentage" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.242"/>

    <TextView
            android:text="@string/_0"
            android:layout_width="158dp"
            android:layout_height="36dp"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/text_seekpercentage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.384"/>

    <TextView
            android:text="@string/tip_amount"
            android:layout_width="127dp"
            android:layout_height="44dp"
            android:id="@+id/tip_amount"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textColorLink="@android:color/holo_blue_bright" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.194" app:layout_constraintVertical_bias="0.859"/>

    <TextView
            android:text="@string/total_amount"
            android:layout_width="136dp"
            android:layout_height="43dp"
            android:id="@+id/total_amount"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textColorLink="@android:color/holo_red_dark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.861"
            app:layout_constraintVertical_bias="0.858"/>

</android.support.constraint.ConstraintLayout>